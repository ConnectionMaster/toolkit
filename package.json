{
  "name": "opera-toolkit",
  "version": "0.59.0",
  "description": "Opera Web UI Toolkit",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "test:server": "node test/server.js",
    "demo": "node demo/server.js",
    "coverage": "nyc mocha",
    "eslint": "eslint src/core/*.js test/*.spec.js",
    "release": "node build.js",
    "update-opera": "node build.js && cp dist/toolkit-0.59.0.js $WORK_DIR",
    "watch": "npm-watch update-opera"
  },
  "pre-commit": [
    "release",
    "eslint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/operasoftware/toolkit.git"
  },
  "keywords": [
    "opera",
    "web ui",
    "toolkit",
    "native",
    "javascript",
    "framework",
    "virtual dom"
  ],
  "author": "Aleksander Åšwitalski",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/operasoftware/toolkit/issues"
  },
  "homepage": "https://github.com/operasoftware/toolkit#readme",
  "devDependencies": {
    "assert": "^1.4.1",
    "dom-test": "^0.4.0",
    "eslint": "^5.7.0",
    "express": "^4.16.4",
    "lazy-module-loader": "^0.9.0",
    "mocha": "^5.2.0",
    "npm-watch": "0.5.0",
    "nyc": "^13.1.0",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "sinon": "^7.0.0",
    "tap": "^12.0.1"
  },
  "watch": {
    "update-opera": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "js",
      "quiet": true
    }
  }
}
